---
import "photoswipe/style.css";
---

<div
  class="pswp-gallery grid grid-cols-3 max-w-6xl mx-auto gap-8 py-20"
  id="gallery"
>
  {
    Array.from({ length: 9 }).map((_, i) => (
      <a
        href={`/archivo-page/1/gallery/img-${i + 1}.webp`}
        target="_blank"
        class="rounded-xl shadow-xl group transition-all hover:scale-105 relative aspect-square"
        data-pswp-width="1152"
        data-pswp-height="767"
        data-cropped="true"
      >
        <img
          loading="lazy"
          src={`/archivo-page/1/gallery/thumbnails/img-${i + 1}.webp`}
          alt=""
          class="rounded-xl aspect-square object-cover"
        />
        <img
          loading="lazy"
          src={`/archivo-page/1/gallery/thumbnails/img-${i + 1}.webp`}
          alt=""
          class="blur-lg absolute inset-0 -z-10 transition group-hover:contrast-150 opacity-70 object-cover"
        />
      </a>
    ))
  }
</div>
<script>
  import PhotoSwipeLightbox from "photoswipe/lightbox";
  const lightbox = new PhotoSwipeLightbox({
    gallery: "#gallery",
    children: "a",
    pswpModule: () => import("photoswipe"),
  });
  lightbox.init();
</script>
