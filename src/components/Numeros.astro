---
import { CountUp } from "./CountUp";
import styles from "./styles/Numeros.module.css";
---

<section class="max-w-6xl mx-auto py-20 px-20">
  <h2 class="text-4xl lg:text-6xl text-center text-balance mb-10 lg:mb-20">
    Los <span class="uppercase">Esland</span> en números
  </h2>
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-y-10">
    <div class="flex flex-col items-center justify-center">
      <span
        class=`text-8xl font-blod tabular-nums tracking-tighter ${styles.numbers}`
        ><CountUp client:visible initial={0} final={69.9} decimals={1} />M</span
      >
      <span class="uppercase opacity-70">de visualizaciones</span>
    </div>
    <div class="flex flex-col items-center justify-center">
      <span class="text-8xl font-blod tabular-nums tracking-tighter numbers"
        ><CountUp client:visible initial={0} final={227} /></span
      >
      <span class="uppercase opacity-70">noticias en prensa</span>
    </div>
    <div class="flex flex-col items-center justify-center">
      <span class="text-8xl font-blod tabular-nums tracking-tighter numbers"
        ><CountUp client:visible initial={0} final={3.2} decimals={1} />M€</span
      >
      <span class="uppercase opacity-70">en medios ganados</span>
    </div>
  </div>
</section>

<style>
  .numbers {
    text-shadow:
      0 0 10px rgba(255, 255, 255, 0.6),
      0 0 20px rgba(255, 255, 255, 0.4),
      0 0 22px rgba(66, 220, 219, 0.2),
      0 0 40px rgba(66, 220, 219, 0.1);
  }
</style>
